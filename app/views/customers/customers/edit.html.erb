<div class="container">
  <div class="row">

	<div class="col-md-12">
      <h2 class="mt-8 d-inline-block">会員情報編集</h2>

  <%= form_for(@customer, url: customer_path) do |f| %>
  <!-- <div class="form-group has-icon"> -->
   <!--  <label class="control-label sr-only" for="inputEmail">Name</label> -->
    
    <form class="form-inline">
      <div class="form-group">
        <label class="col-sm-3 control-label">名前</label>
          <div class="col-sm-9 mr-sm form-inline">
            <p>（姓）<%= f.text_field :family_name, class:"form-control"%></p>
            <p>（名）<%= f.text_field :first_name, class:"form-control"%></p>
          </div>
      </div>
      
      <div class="form-group">
        <label class="col-sm-3 control-label">フリガナ</label>
          <div class="col-sm-9 mr-sm form-inline">
              <p>（姓）<%= f.text_field :family_name_kana, class:"form-control"%></p>
              <p>（名）<%= f.text_field :first_name_kana, class:"form-control"%></p>
          </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-4"><label for="text">郵便番号（ハイフンなし）</label></div>
          <div class="col-sm-6 mr-sm">
            <%= f.text_field :postal_code, class:"form-control"%>
          </div>
      </div>

      <div class="form-group">
        <div class="col-sm-4"><label for="text">住所</label></div>
           <div class="col-sm-6 mr-sm">
              <%= f.text_field :address, class:"form-control"%>
           </div>
      </div>

      <div class="form-group">
        <div class="col-sm-4"><label for="text">電話番号</label></div>
          <div class="col-sm-6 mr-sm">
            <%= f.text_field :phone_number, class:"form-control" %>
          </div>
      </div>

      <div class="form-group">
        <div class="col-sm-4"><label for="email">メールアドレス</label></div>
          <div class="col-sm-6 mr-sm">
            <%= f.email_field :email, class:"form-control"%>
          </div>
      </div>
    </form>
   <!--  <span class="fa fa-user form-control-icon" aria-hidden="true"></span> -->
  </div>
  <div class="col-12 form-inline">
  <%= f.submit "編集内容を保存する", class:"btn btn-primary w-30" %>
  <div class="text-right">
  <%= link_to "退会する", customers_withdraw_confirm_path,class:"btn btn-danger w-15" %></div></div>
  <% end %>

  </div>
</div>

<div class="container">
  <div class="row">
    <h3 class="px-5 mt-5 bg-light">注文情報入力</h3>
  </div>
  <%# 支払い方法 %>
  <h4><strong>支払い方法<strong></h4>
  <div class="ml-5">
    <%= form_for(@order, url:customers_orders_path, method: :post) do |f| %>
      <%= f.radio_button :payment, :credit%>
      <%= f.label :クレジットカード %><br>
      <%= f.radio_button :payment, :cach%>
      <%= f.label :銀行振込 %>
  </div>
    
  <%# お届け先 %>
  <h4><strong>お届け先<strong></h4>
  <%# ご自身の住所 %>
    <div class="ml-5">
        <%= radio_button_tag :address, "my_address" %>
        <%= f.label "address_myaddress", "ご自身の住所"%>
        <p class="ml-5"><%=current_customer.postal_code + current_customer.address + current_customer.family_name + current_customer.first_name %></p>
    </div>
  <%# 登録済住所 %>
    <div class="ml-5">
        <%= radio_button_tag :address, "select_address" %>
        <%= f.label :登録住所から選択%><br>
        <%= f.collection_select :id, current_customer.deliveries.all, :id, :address , class:"ml-5"%><br>
    </div>
  <%# 新しい住所 %>
    <div class="ml-5">
        <%= f.radio_button :address, "new_address" %>
        <%= f.label :新しいお届け先%>
        <p class="ml-5">郵便番号(ハイフンなし)<%= f.text_field :postal_code%>
        <p class="ml-5">住所 <%= f.text_field :address%>
        <p class="ml-5">宛先                  <%= f.text_field :name%>
    </div>
        <%= f.submit "確認画面へ進む", class:"btn btn-primary ml-auto"%>
    <% end %>

<%= current_customer.first_name %>
<%= current_customer.id %>
</div>

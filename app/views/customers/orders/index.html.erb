<div class="container">
  <div class="row">

	<div class="col-md-9">
      <h2 class="mt-5 d-inline-block">注文履歴一覧</h2>

      <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>注文日</th>
                    <th>配送先</th>
                    <th>注文商品</th>
                    <th>支払金額</th>
                    <th>ステータス</th>
                    <th>注文詳細</th>
                </tr>
            <% @orders.each do |order| %>
                <tr>
                    <td><%= order.created_at %></td>
                    <td><%= order.name %><br>
                        <%= order.postal_code %><br>
                        <%= order.address %>
                    </td>
                    <td>
                        <% order.order_items.each do |orderitem| %>
                            <%= orderitem.item.name %><br>
                        <% end %>
                    </td>
                    <td><%= order.payment %></td>
                    <td><%= order.order_status %></td>
                    <td><%= link_to "表示する",customers_order_path(order) %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>


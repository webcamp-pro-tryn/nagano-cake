<div class="container">
  <div class="row">
	<div class="col-md-9">
	  	<h2 class="mt-5 d-inline-block">配送先登録/一覧</h2>

		  	<%= form_for(@delivery, url: customers_deliveries_path) do |f| %>
			  	<h4>郵便番号（ハイフンなし）</h4>
			  	<%= f.text_field :postal_code %>
			  	<h4>住所</h4>
			  	<%= f.text_field :address %>
			  	<h4>宛名</h4>
			  	<%= f.text_field :name %>
			  	<%= f.submit '登録する' %>
			 <% end %> 

			<% @deliveries.each do |delivery| %>
			<table class="table table-bordered">
				<tr>
					<th>郵便番号（ハイフンなし）</th>
					<th>住所</th>
					<th>宛名</th>
					<th></th>
				</tr>		
				<tr>
					<td><%= delivery.postal_code %></td>
					<td><%= delivery.address %></td>
					<td><%= delivery.name %></td>
					<td><%= link_to "編集する", edit_customers_delivery_path(current_customer) %>
						<%= link_to "削除する",customers_delivery_path(current_customer),method: :delete,"data-confirm" => "本当に削除しますか？" %>
					</td>
				</tr>
			</table>
			<% end %>

	</div>
  </div>
</div>

<div class="container my-5">
       <div class="background-color">
  <div class="row">
    <%= render '/layouts/genre_serch', genres:@genres %>
    <div class="col-md-9">
      <h2 class="mt-5 d-inline-block">商品一覧</h2>(全<%= @items.count %>件)
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3">
          <%# 商品画像 %>
            <%= link_to customers_item_path(item) do %>
              <%= attachment_image_tag( item, :image, size: "180x150" ) %><br>
              <%# 商品名 %>
              <%= item.name %><br>
              <%# 税抜き価格 %>
              ￥<%= item.non_tax_price %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

</div>
<div>
  <%= render "layouts/footer" %>
</div>


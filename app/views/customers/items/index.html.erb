    <% @items.each do |item| %>
    <div class="col-md-3">
      <div class="item-img"></div>
      <%= item.name %><br>
      ￥<%= item.non_tax_price %>
    </div>
    <% end %>
    </div>
    </div>
  </div>
</div>

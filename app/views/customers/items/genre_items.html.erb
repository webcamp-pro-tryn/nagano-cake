<div class="container my-5">
  <div class="background-color">
  <div class="row">
    <%= render '/layouts/genre_serch', genres:@genres %>
    <div class="col-md-9">
      <h2 class="mt-5 d-inline-block">ジャンル検索</h2>(全<%= @items.count %>件)
      <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-3">
          <%= link_to customers_item_path(item) do %>
            <%= attachment_image_tag( item, :image, size: "180x150" ) %><br>
            <%= item.name %><br>
            ￥<%= item.non_tax_price %>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
</div>
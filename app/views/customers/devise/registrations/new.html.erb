<div class ="container">
  <div class ="row">
    <div class ="col-xs-12">
<h2 class="head-line">
新規会員登録</h2>
</div>
<div class="host-login col-md-6 offset-md-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table border="0" align="center" >
    <tr height ="50">
    <th width= "900">名前</th>
    <td width= "200">
      (姓)
    <%= f.text_field :family_name, autocomplete: "family-name" %>
    </td>
    <td width= "200">(名)
    <%= f.text_field :first_name, autocomplete: "given-name" %>
    </td>
  </tr>

  <tr height ="50">
    <th width= "900">フリガナ</th>
    <td width="200">（セイ）
    <%= f.text_field :family_name_kana, autocomplete: "family-name_kana" %>
    </td>
    <td width= "200">(メイ)
    <%= f.text_field :first_name_kana, autocomplete: "given-name_kana" %>
    </td>
  </tr>
  
  <tr height ="50">
    <th width= "900">メールアドレス</th>
    <td> <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </td>
  </tr>
  
  <tr height ="50">
    <th width= "900">郵便番号(ハイフンなし)</th>
    <td><%= f.text_field :postal_code, autocomplete: "postal-code" %></td>
  </tr>
   
   <tr height ="50">
    <th width= "900">住所</th>
    <td colspan="2"><%= f.text_field :address, autocomplete: "street-address", size:44 %></td>
  </tr>
   
   <tr height ="50">
    <th width= "900">電話番号(ハイフンなし)</th>
    <td><%= f.text_field :phone_number, autocomplete: "tel" %></td>
  </tr>
   
   <tr height ="50">
    <th width="900">パスワード(６文字以上)</th>
    <td>
    <%= f.password_field :password, autocomplete: "new-password" %></td>
    <td>
  </tr>
   
   <tr height ="50">
    <th width= "900">パスワード(確認用)</th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
</table>
  <div class="actions">
    <%= f.submit "新規登録",class:"btn btn-primary w-15" %>
  </div>
<% end %>
</div>
</div>
</div>

<div class ="sign-link">
<h2>既に登録済みの方</h2>

<%= link_to 'こちら', new_session_path(resource_name)%>からログインしてください。
</div>
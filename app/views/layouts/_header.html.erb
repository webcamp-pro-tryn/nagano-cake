<header>
	<div class="container-fluid">
	<div class="header_flex">
	<nav>
		<h1 class="title">ながのCAKE</h1>
	</nav>
	<nav>
		<ul>
			<!-- カスタマーがログインしている時 -->
			<% if customer_signed_in? %>
				<li>
					ようこそ、<%= current_customer.family_name + current_customer.first_name %> 様！
				</li>
				<li>
					<%= link_to "マイページ", customer_path(current_customer) %>
				</li>
				<li>
					<%= link_to "商品一覧", customers_items_path %>
				</li>
				<li>
					<%= link_to "カート", customers_cart_items_path %>
				</li>
				<li>
					<%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
				</li>
			<% elsif host_signed_in? %>
			<!-- 管理者がログインしている時 -->
				<li>
					<%= link_to "商品一覧", host_items_path %>
				</li>
				<li>
					<%= link_to "会員一覧", host_customers_path %>
				</li>
				<li>
					<%= link_to "注文履歴一覧", host_orders_path %>
				</li>
				<li>
					<%= link_to "ジャンル一覧", host_genres_path %>
				</li>
				<li>
					<%= link_to "ログアウト", destroy_host_session_path, method: :delete %>
				</li>
			<% else %>
			<!-- ログインしてない時 -->
				<li>
					<%= link_to "商品一覧", customers_items_path %>
				</li>
				<li>
					<%= link_to "新規登録", new_customer_registration_path %>
				</li>
				<li>
					<%= link_to "ログイン", new_customer_session_path, class: "header_btn glyphicon glyphicon-log-in" %>
				</li>
			<% end %>
		</ul>
	</nav>
    </div>
</header>
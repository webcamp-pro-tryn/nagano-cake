<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :（姓） %>
    <%= f.text_field :family_name, autocomplete: "family-name" %>
    <%= f.label :（名） %>
    <%= f.text_field :first_name, autocomplete: "given-name" %>
  </div>
  <div class="field">
    <%= f.label :（セイ） %>
    <%= f.text_field :family_name_kana, autocomplete: "family-name" %>
    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana, autocomplete: "given-name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autocomplete: "postal-code" %>
  </div>

   <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autocomplete: "street-address" %>
  </div>

   <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autocomplete: "tel" %>
  </div>


  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


<h2>既に登録済みの方</h2>

<%= link_to 'こちら', new_session_path(resource_name)%>からログインしてください。
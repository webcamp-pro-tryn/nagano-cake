<div class="container">
<h2 class="head-line title_h2 text-center">商品編集</h2>
<div class="row">

  <%= form_for(@item, url: host_item_path, method: :patch, class: "form-horizontal") do |f| %>

    <div class="col-xs-4 h-100">
      <div class="img_field">
        <%= attachment_image_tag(@item, :image, size: "250x180") %>
      </div>
      <div class="form-group">
	      <%= f.attachment_field :image, class: " image" %>
      </div>
    </div>

    <div class="col-xs-8 h-100">
      <div class="form-edit">
      <%= render "form_item", f: f %>
      </div>
      <div class="actions">
	      <%= f.submit "変更を保存", class: "btn btn-primary pull-right" %>
      </div>

    </div>
  <% end %>
</div>
</div>
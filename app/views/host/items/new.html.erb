<div class="background-color">
　<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">商品新規登録</h2>
    <%= render "layouts/error_messages", resource: @item %>
    <%= form_for(@item, url: host_items_path, method: :post, class: "form-horizontal") do |f| %>
      <div class="col-xs-4 col-xs-offset-1">
        <div class="img_field">
        </div>
  	      <%= f.attachment_field :image, class: "image" %>
      </div>
      <div class="col-xs-6">
        <%= render "form_item", f: f %>
        <div class="actions col-xs-7">
  	      <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>

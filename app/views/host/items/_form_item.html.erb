<div class="form-group">
  <%= f.label :"商品名", class: "col-xs-3 control-label" %>
  <%= f.text_field :name, class: "col-xs-9 form-control-static name" %>
</div>
<div class="form-group">
  <%= f.label :"商品説明", class: "col-xs-3 control-label" %>
  <%= f.text_area :description, class: "col-xs-9 control-label explanation" %>
</div>
<div class="form-group">
  <%= f.label :"ジャンル", class: "col-xs-3 control-label" %>
  <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "col-xs-9 genre_id") %>
</div>
<div class="form-group">
  <%= f.label :"税抜価格", class: "col-xs-3 control-label" %>
  <%= f.text_field :non_tax_price, class: "col-xs-8 form-control-static tax_out_price" %>円
</div>
<div class="form-group">
  <%= f.label :"販売ステータス", class: "col-xs-3 control-label" %>
  <%= f.select :is_active, [['販売中', true], ['売切れ', false]], prompt: "-- 選択してください --", class: "col-xs-9 is_sale" %>
</div>
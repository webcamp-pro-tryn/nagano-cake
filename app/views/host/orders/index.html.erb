<div class="container-fluid">
    <div class="row">
    
        <div class="col-md-12">
            <h2 class="mt-8 d-inline-block">注文一覧</h2>

            <div class="row form-group mt-5">
                <table class="tabletable-hover table-bordered table-condensed">
        	   <thead>
                    <tr class="info">
            		<th>購入日時</th>
            		<th>購入者</th>
            		<th>注文個数</th>
            		<th>注文ステータス</th>
                    <th></th>
                    </tr>
        	   </thead>
        	   <tbody>
        		  <% @orders.each do |order| %>
        		    <tr>
            			<td>
            				<%= order.created_at.strftime('%Y/%m/%d/%R') %>
            	        </td>
            	        <td>
            	        	<%=link_to "#{order.customer.family_name}#{order.customer.first_name}", host_customer_path(order.customer) %>
            	        </td>
            	        <td>
            	        	<%= order.order_items.count %>
            	        </td>
            	        <td>
            	        	<%= order.order_status_i18n %>
            	        </td>
                        <td>
                            <%=link_to "注文詳細", host_order_path(order.id) %>
                        </td>
        	       </tr>
        	      <% end %>
                <%= paginate @orders%>
        	   </tbody>
        </table>
        </div>
        </div>
    </div>
</div>






<div class="container">
  <div class="row">
  	<div class="col-xs-2">
  </div>
  	<div class="col-xs-8">
      <h3 class="customer-title-show">
    	<strong>注文一覧
    	</strong>
        </h3>
        <table class="table">
        	<thead>
        		<th>購入日時</th>
        		<th>購入者</th>
        		<th>注文個数</th>
        		<th>注文ステータス</th>
        	</thead>
        	<tbody>
        		<% @orders.each do |order| %>
        		<tr>
        			<td>
        				<%= order.created_at.strftime('%Y/%m/%d/%R') %>
        	        </td>
        	        <td>
        	        	<%= order.customer.family_name %><%= order.customer.last_name %>
        	        </td>
        	        <td>
        	        	<%= order.customer.cart_items.amount %>
        	        </td>
        	        <td>
        	        	<%= order.status %>
        	        </td>
        	    </tr>
        	    <% end %>
        	</tbody>
        </table>
    </div>
</div>
</div>






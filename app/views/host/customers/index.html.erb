<div class="container">
  <div class="row">
  	<div class="col-xs-2">
  </div>
  	<div class="col-xs-8">
      <h3 class="customer-title-show">
    	<strong>会員一覧
    	</strong>
        </h3>
    <table class="table table-bordered">
				<thead>
						<th>会員ID</th>
						<th>氏名</th>
						<th>メールアドレス</th>
						<th>ステータス</th>
				</thead>
				<tbody>
					<% @customers.each do |customer| %>
					  <tr>
						<td><%= customer.id %></td>
						<td>
							<%= link_to  host_customer_path(customer) do %>
							<%= customer.family_name%><%= customer.first_name %>
							<% end %>
						</td>
						<td><%= customer.email %></td>
						<td>
							<% if customer.is_deleted ==true %>
							有効
							<% else %>
							退会済み
							<% end %>
						</td>
					  </tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
<div class="container">
    	<div class="row">
    		<div class="col-xs-2">
    	</div>
    <div class="col-xs-8">
      <h3 class="customer-title-show">
    	<strong><%= @customer.family_name%><%= @customer.first_name %>の会員編集
    	</strong>
      </h3>
    <div class="form-horizontal" role="form">
    	 <%= form_for(@customer, url: host_customer_path, method: :patch) do |f| %>

    	 <div class="form-group">
    	 	 <%= f.label "会員ID" ,:class => "col-sm-3 control-label"%>
    	 	<%= @customer.id %>
    	 </div>

    	 <div class="form-group">
    	 	 <%= f.label "氏名" ,:class => "col-sm-3 control-label"%>
    	 	<%= f.text_field :family_name %>
    	 	<%= f.text_field :first_name %>
    	 </div>

    	 <div class="form-group">
    	 	 <%= f.label "フリガナ" ,:class => "col-sm-3 control-label"%>
    	 	<%= f.text_field :family_name_kana %>
    	 	<%= f.text_field :first_name_kana %>
    	 </div>


    	 <div class="form-group">
    	 	<%= f.label "郵便番号" ,:class => "col-sm-3 control-label"%>
    	 	<%= f.text_field :postal_code %>
    	 </div>


    	 <div class="form-group">
    	 	 <%= f.label "住所" ,:class => "col-sm-3 control-label"%>
    	 	<%= f.text_field :address %>
    	 </div>

    	 <div class="form-group">
    	 	 <%= f.label "電話番号" ,:class => "col-sm-3 control-label"%>
    	 	<%= f.text_field :phone_number %>
    	 </div>


    	 <div class="form-group">
    	 	 <%= f.label "メールアドレス" ,:class => "col-sm-3 control-label"%>
    	 	<%= f.text_field :email %>
    	 </div>

    	 <div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<div class="checkbox">
				<%= radio_button_tag :is_delete, :true %>
				<%= f.label :is_delete,"有効",{value: :true, style: "display :inline-block;",} %>
				<%= radio_button_tag :is_active, :false %>
                <%= f.label :is_active,"退会済み", {value: :false, style: "display :inline-block;"} %>
			</div>
			 <div class="submit">
            <%= f.submit "変更を保存する" , class:"btn btn-info" %>

          </div>
    	 <% end %>
    	</div>
    </div>
</div>


